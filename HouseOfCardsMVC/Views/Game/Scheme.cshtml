@using HouseOfCardsMVC.Models
@model PlayerModel
@{
    Layout = "~/Views/Shared/_Layout-Game.cshtml";
    ViewBag.Title = "Scheme";
    bool Messages = Model.Messages.Any();
}

<div id="Scheme_Messages_Div" class="Padding-Box" @(Messages ? "" : "hidden")>
    <h2>Messages</h2>
    @foreach (string message in Model.Messages)
    {
        <label>@message</label>
    }
    <button onclick="$('#Scheme_Messages_Div').hide(); $('.Game-Body').show();">Close</button>
</div>

<div class="Game-Body Padding-Box" @(Messages ? "hidden" : "")>
    <div class="row">
        <div class="col-sm-6">
            @{
                var Card1 = Constants.Cards.GetCard(Model.Card_Ids[0]);
                <div onclick="SelectCard_Tile('@Card1.Id')">
                    <h5>@Card1.Name</h5>
                    <p>@Card1.Description</p>
                </div>  
            }
        </div>
        <div class="col-sm-6">
            @{
                var Card2 = Constants.Cards.GetCard(Model.Card_Ids[1]);
                <div onclick="SelectCard_Tile('@Card2.Id')">
                    <h5>@Card2.Name</h5>
                    <p>@Card2.Description</p>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            @{
                var Card3 = Constants.Cards.GetCard(Model.Card_Ids[2]);
                <div onclick="SelectCard_Tile('@Card3.Id')">
                    <h5>@Card3.Name</h5>
                    <p>@Card3.Description</p>
                </div>
            }
        </div>
        <div class="col-sm-6">
            @{
                var Card4 = Constants.Cards.GetCard(Model.Card_Ids[3]);
                <div onclick="SelectCard_Tile('@Card4.Id')">
                    <h5>@Card4.Name</h5>
                    <p>@Card4.Description</p>
                </div>
            }
        </div>
    </div>
    <button onclick="SchemeComplete_Button()">Done</button>
    <div hidden id="Pending-Players-Scheme" class="bg-danger"><label>Waiting for <span id="Pending-Players-Scheme-Count"></span> Players</label></div>

</div>

